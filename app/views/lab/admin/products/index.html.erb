<div class="container-fluid m-top m-bottom">
  <p id="notice"><%= notice %></p>
  
  <h1 class="text-uppercase">Productos</h1>
  
  <table class="products">
    <thead>
      <tr>
        <th>Imagen</th>
        <th>Nombre del Producto</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Categor√≠a</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>
  
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><img src="<%= product.url %>"/></td>
          <td><%= product.name %></td>
          <td><span>S/</span><%= product.amount %></td>
          <td><%= product.quantity %></td>
          <td><%= product.category.id %></td>
          <td><%= link_to 'Mostrar', lab_admin_product_path(product), :class => 'btn-orange'%></td>
          <td><%= link_to 'Editar', edit_lab_admin_product_path(product), :class => 'btn-orange'%></td>
          <td><%= link_to 'Eliminar', lab_admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn-orange'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>

  
  <%= link_to 'New Product', new_lab_admin_product_path , :class => 'btn-orange'%>
</div>
