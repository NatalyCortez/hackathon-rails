<div class="">
    <div class="form-padding">
      <div class="col s12">
        <div class="cardLogin hoverable">
          <div class="grey lighten-2 title-div">
            <h4 class="center-align">BIENVENIDOS</h4>
          </div>
          <div class="card-content">  
            <br>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field center">
                <br />
                <%= f.email_field :email, placeholder: "Correo electrónico", required: true, autofocus: true, autocomplete: "email", :style => "background:white; padding-left:1rem; width: 25rem; border-radius:0.3rem;" %>
              </div>
            
              <div class="field center">
                <br />
                <%= f.password_field :password, placeholder: "Contraseña", required: true, hint: false, autocomplete: "off", :style => "background:white; padding-left:1rem; width: 25rem; border-radius:0.3rem;" %>
              </div>
            
              <% if devise_mapping.rememberable? -%>
                <div class="field center">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
              <div class="center">
                <br />
                <button id="btn-login" class="btn center ">
                  <%= "Ingresar" %>
                </button>
              </div>

            <% end %>
            <br>
            <div class="divider"></div>
            <br>
            <%= render "devise/shared/links" %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
