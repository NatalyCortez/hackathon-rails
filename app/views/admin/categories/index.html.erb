<div class="container-fluid m-top m-bottom">
  <p id="notice"><%= notice %></p>
  
  <h1 class="text-uppercase">Categorías</h1>
  
  <table class="products">
    <thead>
      <tr>
        <th>Nombre de la Categoría</th>
        <th>Activo</th>
        <th>Descripción</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.active %></td>
          <td><%= category.description %></td>
          <td><%= link_to 'Show', [:admin, category], :class => 'btn-orange' %></td>
          <td><%= link_to 'Edit', edit_admin_category_path(category), :class => 'btn-orange' %></td>
          <td><%= link_to 'Destroy', [:admin, category], method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn-orange' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
 
  <%= link_to 'New Category', new_admin_category_path, :class => 'btn-orange' %>
</div>
